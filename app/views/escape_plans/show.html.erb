<%@escape_plan.memberships.each do |membership|%>
  <%if membership.id%>
    <%=membership.chicken.name%>
    <%=link_to "Remove this chicken", [@escape_plan, membership], method: :delete%>
  <%end%>
<%end%>

<%=form_for [@escape_plan, @membership] do |f|%>
  <%=f.collection_select(:chicken_id, Chicken.all, :id, :name)%>
  <%=f.submit "Add Chicken to Plan"%>
<%end%>
